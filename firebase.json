{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|webp|svg)",
        "destination": "/index.html"
      }
    ],
    "functions": {
      "runtime": "nodejs18",
      "memory": "512MB",
      "timeoutSeconds": 60
    }
  }
}
