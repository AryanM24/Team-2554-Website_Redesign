{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "**",
        "destination": "/404.html"
      }
    ],
    "functions": {
      "runtime": "nodejs18",
      "memory": "512MB",
      "timeoutSeconds": 60
    }
  }
}
